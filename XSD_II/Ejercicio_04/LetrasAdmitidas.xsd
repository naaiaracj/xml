<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="letras">
    <xs:simpleType>
      <xs:restriction base="xs:string">
<!-- El patrón permite que uno o más pares de letras mayúsculas seguida de letras minúsculas -->
        <xs:pattern value="([A-Z][a-z])+" />
      </xs:restriction>
    </xs:simpleType>
  </xs:element>

</xs:schema>
