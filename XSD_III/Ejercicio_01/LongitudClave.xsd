<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="clave">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:length value="10"/>
        <xs:pattern value="[a-zA-Z0-9]{10}"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
</xs:schema>

